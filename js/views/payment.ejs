<html>
<head>
    <meta charset="UTF-8">
    <title>10,000 Leads | Payment</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="js/main.js"></script> 

    <link rel="stylesheet" type="text/css" href="ui/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="css/login.css">
    <script src="ui/semantic.min.js"></script>
</head>
<body>
    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui teal image header">
          <div class="content">
            Unlimited access for $50
          </div>
        </h2>
          
          <form class="ui large form" action="/create_subscription" method="POST">
            <div class="ui stacked segment">
              <h4 class="ui dividing header">Shipping Information</h4>
                <div class="field">
                  <label>Name</label>
                  <div class="two fields">
                    <div class="field">
                      <input type="text" name="shipping[first-name]" placeholder="First Name">
                    </div>
                    <div class="field">
                      <input type="text" name="shipping[last-name]" placeholder="Last Name">
                    </div>
                  </div>
                </div>
                <div class="field">
                  <label>Billing Address</label>
                  <div class="fields">
                    <div class="twelve wide field">
                      <input type="text" name="shipping[address]" placeholder="Street Address">
                    </div>
                    <div class="four wide field">
                      <input type="text" name="shipping[address-2]" placeholder="Apt #">
                    </div>
                  </div>
                </div>

              <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="pk_test_QobPs8x5I8SW5BsWOOA0tUHt"
                data-image="img/logo.png"
                data-name="10,000 Leads"
                data-description="Unlimited access, One time fee"
                data-amount="5000"
                data-label="Sign Me Up!" >
              </script>
            </div>
          </form>

        <div class="ui message">
          New to us? <a href="/signup">Sign Up</a>
        </div>
      </div>
    </div>
    

</body>
</html>