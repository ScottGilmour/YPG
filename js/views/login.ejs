<html>
<head>
    <meta charset="UTF-8">
    <title>10,000 Leads | Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="js/login.js"></script> 

    <link rel="stylesheet" type="text/css" href="ui/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="css/login.css">
    <script src="ui/semantic.min.js"></script>
</head>
<body>
    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui teal image header">
          <div class="content">
            Log-in to your account
          </div>
        </h2>

        <form id="loginform" class="ui large form" action="/login" method="post">
          <div class="ui stacked segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                <input type="text" name="email" placeholder="E-mail address">
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" name="password" placeholder="Password" id="passfield">
              </div>
            </div>
            <div id="submitbtn" class="ui fluid large teal submit button">Login</div>
          </div>
        </form>

        <% if (message.length > 0) { %>
                <div class="ui error message"><%= message %></div>
            <% } %>

        <div class="ui message">
          New to us? <a href="/signup">Sign Up</a>
        </div>
      </div>
    </div>
    

</body>
</html>