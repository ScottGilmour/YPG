<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>10,000 Leads | Contacts</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="js/contact.js"></script> 

    <link rel="stylesheet" type="text/css" href="ui/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <script src="ui/semantic.min.js"></script>
</head>
<body>
    <div class="ui pointing menu">
      <a href="/scraper" class="item">
        Crawler
      </a>
      <a class="active item">
        Contacts
      </a>
      <a class="item">
        Settings
      </a>

      <div class="right menu">
        <div class="item">
            <a class="ui button" href="/logout">Logout <%= user.local.email %></a>
        </div>
      </div>
    </div>

    <% if (user.local.active_until > new Date()) { %>

    <div class="ui segment">
      <table class="ui celled table">
        <thead>
            <tr id="headers">
                <th>Actions</th>
                <th>Title</th>
                <th>Address</th>
                <th>City</th>
                <th>Region</th>
                <th>Postal</th>
                <th>Phone</th>
                <th>Website</th>
            </tr>
        </thead>
          <tbody id="tbody">
            
          </tbody>
        </table>
    </div>
    <% } else { %>
           <div class="ui middle aligned center aligned grid">

              <div class="">
              <br>
              <br>
                <h2 class="ui teal image header">
                  <div class="content">
                    Error
                  </div>
                </h2>

                <div class="ui message">
                  <div class="header">
                    Error
                  </div>
                  <p>You are not a member and therefore cannot use the contact database tool. <a href="/payment">Join us for unlimited access!</a></p>
                </div> 
              </div>
            </div>
    <% } %>
</body>
</html>